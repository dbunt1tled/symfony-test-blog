{% extends 'base.html.twig' %}
{% block title %}Latest Posts{% endblock %}

{% block body %}
    <h1>Latest Posts</h1>
    <table class="table table-hover table-striped table-hover">
    {% for post in posts %}
        <tr>
            <td>{{ post.title }}</td>
            <td>{{ post.description }}</td>
            <td>{{ post.author }}</td>
            <td>{{ post.createdAt.format('d m Y') }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
