{% extends 'admin-base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ author.job }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ author.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ author.phone }}</td>
            </tr>
            <tr>
                <th>ShortBio</th>
                <td>{{ author.shortBio }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ author.twitter }}</td>
            </tr>
            <tr>
                <th>Github</th>
                <td>{{ author.github }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ author.password }}</td>
            </tr>
            <tr>
                <th>PlainPassword</th>
                <td>{{ author.plainPassword }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ author.role ? author.role|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_author_index') }}">back to list</a>

    <a href="{{ path('admin_author_edit', {'id': author.id}) }}">edit</a>

